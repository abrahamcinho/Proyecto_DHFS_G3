<%- include("./partials/head") %>
    <%- include("./partials/header") %>

        <body>
            <h2 class="prod_tittle">Listado de Productos</h2>
            <div class="products_container"> 
                <div class="products_subcontainer">
                    <div class="tittle_container">
                        <h4>Tortas</h4>
                    </div>
